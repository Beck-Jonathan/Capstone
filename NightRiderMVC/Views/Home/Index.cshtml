@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="container align-content-center">
        <div class="row m-auto my-2">
            <div class="card px-0">
                <img class="card-img" src="~/Content/Images/jumbo_bus.jpg" alt="A city bus in motion" />
                <div class="card-img-overlay text-white d-flex flex-column justify-content-center">
                    <h1 class="display-4 ms-3">Your Fleet Service</h1>
                    <p class="lead ms-5 img-text">Up-to-date schedules integrated with your management app</p>
                </div>
            </div>
        </div>
        <div class="row gx-4 d-flex mt-5 mx-auto">
            <div class="col-md-4 d-inline-block ps-0 bg-light">
                <div class="p-5 shadow rounded-3 h-100">
                    <h2>Reach your riders</h2>
                    <br />
                    <p>
                        Making changes? No problem! Update routes and service status without worrying about your website.
                        The NightRider application makes sure your riders stay up to date with your fleet's services.
                    </p>
                </div>
            </div>
            <div class="col-md-8 d-inline-block ps-0 bg-light">
                <div class="p-5 shadow rounded-3 h-100">
                    <h2>Check in from the field</h2>
                    <br />
                    <p>Driver application features are built right into the web portal for streamlined recordkeeping on the road.
                    NightRider makes it easy to check drivers to check route assignments and more.'</p>
                </div>
            </div>
        </div>
        <div class="row mt-5 d-flex mt-5 mx-auto bg-light rounded shadow">
            <div class="row bg-light text-center m-0 p-2">
                <h2>Automatically Generated Route Maps</h2>
            </div>
            <div class="row justify-content-center">
                <img class="m-auto w-100" src="~/Content/Images/sample_map.jpg" alt="A street map"/>
            </div>
        </div>
    </div>
    <div data-show-cookie-notice="@ViewBag.ShowCookieNotice"></div>


</main>
<!-- MODAL -->
<div class="modal fade" id="mdl-cookie" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cookie Policy</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>NightRider requires server-side, session cookies for basic functionality. By using the site,
                you agree to allow the temporary collection of data necessary for the session. NightRider does not
                use broswer-based cookies to collect persistent data.</p>
                <p>You can review our cookie policy @Html.ActionLink("here", "Cookies", "Home").</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">I Agree</button>
            </div>
        </div>
    </div>
</div>