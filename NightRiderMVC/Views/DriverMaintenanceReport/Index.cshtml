@model IEnumerable<DataObjects.DriverMaintenanceReportVM>

@{
    ViewBag.Title = "View All Reports";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DriverID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.VehicleNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.VehicleType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Severity)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Is_Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriverID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.VehicleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Severity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Is_Active)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.DriverMaintenanceReportID })

            </td>
        </tr>
    }

</table>
