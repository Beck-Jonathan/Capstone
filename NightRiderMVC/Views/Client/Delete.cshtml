@model DataObjects.Client

@{
    ViewBag.Title = "Deactivate";
}

<h2>Delete</h2>

<p class="text-danger"><strong>Are you sure you want to deactivate your account?</strong></p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GivenName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FamilyName)
        </dd>

        <dt>
            Middle Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DOB)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOB)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostalCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            State
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Region)
        </dd>

        <dt>
            Street Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TextNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TextNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VoiceNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VoiceNumber)
        </dd>
        </dl>
        @* Alert Modal *@
        <div class="modal fade" id="mdl-profile-delete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-danger">Delete Account</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body align-content-center">
                        This will deactivate your account. Are you sure you want to proceed?
                    </div>
                    <div class="modal-footer">
                        @using(Html.BeginForm("Delete", "CLient", FormMethod.Post, new {id = "frmDelete"}))
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Confirm Deactivation" class="btn btn-outline-danger" id="btn-delete-confirm" />
                            <button type="button" class="btn btn-outline-success" data-bs-dismiss="modal">Cancel</button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div>
            <input value="Deactivate Account" class="btn btn-outline-danger ms-2" id="btn-client-delete" />
        </div>
        <div class="my-5">
            @Html.ActionLink("Back to Profile", "Index", "Client")
        </div>
</div>