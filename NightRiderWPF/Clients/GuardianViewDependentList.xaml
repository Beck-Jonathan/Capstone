                </DataGrid.Columns>
            </DataGrid>
        </Grid>-->
        <Grid Grid.Row="2">
            <DataGrid x:Name="datDependentList" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" 
                          Margin="35,5,35,5" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="True" 
                          IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnUpdateDependent" Click="btnUpdateDependent_Click">View or Edit</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnDeleteDependent" Click="btnDeleteDependent_Click" >Delete</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="3">

        </Grid>
    </Grid>
